
@model HorizonHotelWebsite.Models.Entities.booking.Booking;
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="post" class="form-horizontal" role="form">
    <h3>Add a booking!</h3>

    @if (User.Identity.IsAuthenticated)
    {
       
    }
    else
    {
        <div class="form-group">
            <label asp-for="User.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="User.LastName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="User.Email" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="User.PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    }



    <div class="form-group">
        <label asp-for="Room.Type" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for="Room.Type" asp-items="Html.GetEnumSelectList<HorizonHotelWebsite.Models.Entities.room.RoomType>()" class="form-control">
                <option value="">Choose room type</option>
            </select>
            <span asp-validation-for="Room.Type" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <label asp-for="CheckIn" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CheckIn" class="form-control" />
            <span asp-validation-for="CheckIn" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CheckOut" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CheckOut" class="form-control" />
            <span asp-validation-for="CheckOut" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>

</form>






